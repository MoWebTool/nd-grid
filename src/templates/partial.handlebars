<table>
  <thead>
    <tr>
      {{#if checkable}}<th><input data-role="check-all" type="checkbox" title="全选"></th>{{/if}}
      {{#each labelMap}}<th>{{this}}</th>{{/each}}
      {{#if itemActions}}<th>操作</th>{{/if}}
    </tr>
  </thead>
  <tbody>
    {{#each itemList}}
    {{!-- ROWS --}}
      <tr data-role="item" data-id="{{uniqueId ../uniqueId}}">
      {{#if ../checkable}}<td><input name="check-item" type="checkbox" value="{{uniqueId ../../uniqueId}}"></td>{{/if}}
      {{#each this}}
      {{#if visible}}
      {{!-- COLS --}}
        <td>
          {{#isEntry}}
            <a href="javascript:;" data-role="view-item">{{adapters ../../key ../../value}}</a>
          {{else}}
            <span>{{adapters ../../key ../../value}}</span>
          {{/isEntry}}
        </td>
      {{/if}}
      {{/each}}
      {{#if ../itemActions}}
        <td>
          {{#each ../../itemActions}}<button class="button-{{role}}" data-role="{{role}}"{{#isDisabled ../../this}} disabled{{/isDisabled}}>{{text}}</button>{{/each}}
        </td>
      {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>
