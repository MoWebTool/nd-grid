{{#if itemList}}
<table>
  <thead>
    <tr>
      {{#if checkable}}<th><input data-role="check-all" type="checkbox" title="全选"></th>{{/if}}
      {{#each labelMap}}<th data-key="{{@key}}">{{this}}</th>{{/each}}
      {{#if itemActions}}<th>操作</th>{{/if}}
    </tr>
  </thead>
  <tbody>
    {{#each itemList}}
    {{!-- ROWS --}}
      <tr data-role="item" data-id="{{uniqueId @root.uniqueId}}">
      {{#if @root.checkable}}<td data-role="cell"><input name="check-item" type="checkbox" value="{{uniqueId @root.uniqueId}}"{{#if checked}} checked{{/if}}></td>{{/if}}
      {{#each this}}
      {{#if visible}}
      {{!-- COLS --}}
      {{#if isMerge}}
        {{#unless index}}
          <td data-role="cell" rowspan="{{count}}">
            {{#if isEntry}}
              <a href="javascript:;" data-role="view-item">{{adapters ../../key ../../value}}</a>
            {{else}}
              <span>{{adapters ../../key ../../value}}</span>
            {{/if}}
          </td>
        {{/unless}}
      {{else}}
        <td data-role="cell">
        {{#if isEntry}}
          <a href="javascript:;" data-role="view-item">{{adapters ../../key ../../value}}</a>
        {{else}}
          <span>{{adapters ../../key ../../value}}</span>
        {{/if}}
        </td>
      {{/if}}
      {{/if}}
      {{/each}}
      {{#if @root.itemActions}}
        <td data-role="cell">
          {{#each @root.itemActions}}<button class="button-{{role}}" data-role="{{role}}" data-tips="{{tips}}"{{#isDisabled ../../this}} disabled{{/isDisabled}}><span>{{text}}</span></button>{{/each}}
        </td>
      {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
  <p class="list-empty">没有数据啦！</p>
{{/if}}
